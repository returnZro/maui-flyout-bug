<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFFlyoutPage.MainPage">

    <ScrollView>
        <StackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">
                
            <Label 
                Text="Main Page of the app"
                FontSize="32"
                HorizontalOptions="Center" />
            
            <Label 
                Text="This is a Navigation Page and will remain as root page of the app"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button 
                Text="Push a FlyoutPage on top"
                Clicked="OnPushClicked"
                HorizontalOptions="Center" />

        </StackLayout>
    </ScrollView>

</ContentPage>

